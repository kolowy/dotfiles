# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
# command=$SCRIPT_DIR/$BLOCK_NAME
markup=none

# Define the custom separator in global properties for (boilerplate 
full_text=
align=center
separator=false
separator_block_width=8


# Volume indicator
#
# The first parameter sets the step (and units to display)
# The second parameter overrides the mixer selection
# See the script for details.


[github]
command=./github/github
interval=60
format=json
markup=pango


# Generic media player support
#
# This displays "ARTIST - SONG" if a music is playing.
# Supported players are: spotify, vlc, audacious, xmms2, mplayer, and others.
# Set to %any to automatically pick (Requires playerctl >=2.1.1)
[skipback]
align=center
full_text=     
command=playerctl previous

[play]
align=center
full_text=
command=playerctl play-pause

[skipfor]
align=center
full_text=  
command=playerctl next


[mediaplayer]
command=./mediaplayer/mediaplayer
markup=pango
#instance=vlc,%any,spotify
interval=5
# signal=10
align=center

[sepa]
full_text=  


[wifi]
command=./wifi/wifi
full_text=
label= : 
interval=10
INTERFACE=wlo1

[sepa]
full_text=  


[volume-pulseaudio]
command=./volume-pulseaudio/volume-pulseaudio
interval=once
signal=1
interval=2
LONG_FORMAT=" ${SYMB} ${VOL}% "
SHORT_FORMAT=" ${SYMB} ${VOL}% "
AUDIO_DELTA=5
DEFAULT_COLOR="#ffffff"
MUTED_COLOR="#a0a0a0"

[sepa]
full_text=  


[backlight]
command=./backlight/backlight
label=☀ 
interval=20
#STEP_SIZE=5
#USE_SUDO=0



# arch update
[arch-update]
